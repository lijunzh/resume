#!/usr/bin/env bash
#
# Pre-commit hook for LaTeX resume project
# Runs quality checks before allowing commits
#

set -e

# Configuration (can be overridden with environment variables)
: "${SKIP_BUILD_TEST:=false}"
: "${SKIP_OPTIMIZATION:=false}"
: "${VERBOSE:=false}"

# Function for verbose output
verbose() {
    if [ "$VERBOSE" = "true" ]; then
        echo "$@"
    fi
}

echo "ğŸ” Running pre-commit checks..."

# Check if we're in the right directory
if [ ! -f "Makefile" ] || [ ! -f "resume.tex" ]; then
    echo "âŒ Error: Not in LaTeX resume project root directory"
    exit 1
fi

# Function to check if command exists
command_exists() {
    command -v "$1" >/dev/null 2>&1
}

# Check required dependencies
echo "ğŸ“‹ Checking dependencies..."
for cmd in make latexmk xelatex; do
    if ! command_exists "$cmd"; then
        echo "âŒ Error: $cmd is required but not installed"
        case "$cmd" in
            make) echo "ğŸ’¡ Install build-essential (Ubuntu) or Xcode tools (macOS)" ;;
            latexmk|xelatex) echo "ğŸ’¡ Install TeX Live: https://www.tug.org/texlive/" ;;
        esac
        exit 1
    fi
done

verbose "âœ… All required dependencies found"
echo "âœ… Dependencies check passed"

# Run linting
echo "ğŸ§¹ Running lint checks..."
if ! make lint; then
    echo "âŒ Error: Lint checks failed"
    echo "ğŸ’¡ Fix the issues above before committing"
    exit 1
fi

echo "âœ… Lint checks passed"

# Build test (can be skipped with SKIP_BUILD_TEST=true)
if [ "$SKIP_BUILD_TEST" != "true" ]; then
    echo "ğŸ”¨ Testing build process..."
    if ! make clean >/dev/null 2>&1; then
        echo "âŒ Error: Failed to clean build directory"
        exit 1
    fi

    if ! make all >/dev/null 2>&1; then
        echo "âŒ Error: Build process failed"
        echo "ğŸ’¡ Check build logs in build/*.log"
        exit 1
    fi

    echo "âœ… Build test passed"
fi

# Validate and optimize generated PDFs (can be skipped with SKIP_OPTIMIZATION=true)
if [ "$SKIP_OPTIMIZATION" != "true" ]; then
    echo "ğŸ“„ Validating and optimizing PDFs..."
    if ! make optimize >/dev/null 2>&1; then
        echo "âŒ Error: PDF validation and optimization failed"
        exit 1
    fi

    echo "âœ… PDF validation and optimization passed"
fi

# Check for large files
echo "ğŸ“ Checking file sizes..."
large_files=$(find build -name "*.pdf" -size +5M 2>/dev/null || true)
if [ -n "$large_files" ]; then
    echo "âš ï¸  Warning: Large PDF files detected:"
    echo "$large_files"
    echo "ğŸ’¡ Consider optimizing images or content"
fi

# Check git status
staged_files=$(git diff --cached --name-only)
if echo "$staged_files" | grep -q "\.tex$\|\.bib$\|\.cls$"; then
    echo "ğŸ“ LaTeX files detected in commit"
    
    # Check for TODO/FIXME in staged files
    if git diff --cached | grep -E "TODO|FIXME|XXX" >/dev/null; then
        echo "âš ï¸  Warning: TODO/FIXME comments found in staged changes"
        echo "ğŸ’¡ Consider resolving these before committing"
    fi
fi

echo ""
echo "ğŸ‰ All pre-commit checks passed!"
echo "âœ¨ Ready to commit changes"
echo ""

exit 0
